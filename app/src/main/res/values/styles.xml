<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="spinner_style" >
     <item name="android:background">@drawable/spinner_gradient</item>


    </style>


    <style name="form_spinner_style" >
        <item name="android:background">@drawable/form_spinner_bg</item>
        <item name="android:textSize">@dimen/form_credential_text_size</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:popupElevation">10dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@color/colorWhite</item>
        <item name="android:layout_width">@dimen/form_spinner_width</item>
        <item name="android:layout_height">@dimen/form_spinner_height</item>
        <item name="android:layout_marginTop">@dimen/destination_text_field_margin_top</item>

    </style>


    <style name="form_textfield_style">

        <item name="android:background">@drawable/form_spinner_bg</item>
        <item name="android:textSize">@dimen/form_credential_text_size</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/destination_text_field_margin_top</item>
        <item name="android:layout_width">@dimen/form_spinner_width</item>
        <item name="android:layout_height">@dimen/form_spinner_height</item>

    </style>



</resources>
