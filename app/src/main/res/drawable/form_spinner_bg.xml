<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item>
        <layer-list>

            <item>
                <shape>
                    <solid android:color="@color/colorWhite"></solid>

                    <stroke android:width="1.5dp" android:color="#c7c8c8" />

                    <corners android:radius="4dp" />

                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />

                </shape>
            </item>

        </layer-list>


        <item>


            <bitmap android:gravity="center_vertical|right"
                android:src="@drawable/dropdown_arrow"></bitmap>



        </item>
        <!--<item android:drawable="@drawable/ic_arrow_drop_down_circle_black_24dp"/>-->


    </item>

</selector>