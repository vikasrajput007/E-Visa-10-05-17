<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorElevation"
            android:orientation="vertical">

            <include layout="@layout/forms_top_logo"></include>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/form_layout_background"
                android:orientation="vertical"
                android:paddingLeft="@dimen/layout_padding_left"
                android:paddingRight="@dimen/layout_padding_right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="Fill out the E-Visa application below"
                    android:textColor="#333"
                    android:textSize="@dimen/destination_country_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:background="#333" />

                <LinearLayout
                    android:layout_width="@dimen/personal_tab_width"
                    android:layout_height="@dimen/personal_tab_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:background="@drawable/form_tab_bg"
                    android:gravity="center">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family"
                        android:textAllCaps="true"
                        android:textColor="#333"
                        android:textSize="@dimen/personal_text_size" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:paddingLeft="7dp">


                    <EditText
                        android:id="@+id/father_name"
                        android:singleLine="true"
                        style="@style/form_textfield_style"
                        android:hint="Father's  Name" />


                    <Spinner
                        android:id="@+id/father_nationality"
                        style="@style/form_spinner_style">

                    </Spinner>

                    <EditText
                        android:id="@+id/father_birth_place"
                        style="@style/form_textfield_style"
                        android:singleLine="true"
                        android:hint="Fathers place of birth" />


                    <Spinner
                        android:id="@+id/father_birth_country"
                        style="@style/form_spinner_style">

                    </Spinner>

                    <EditText
                        android:id="@+id/mother_name"
                        style="@style/form_textfield_style"
                        android:singleLine="true"
                        android:hint="Mother's  Name" />

                    <Spinner
                        android:id="@+id/mother_nationality"
                        style="@style/form_spinner_style">

                    </Spinner>

                    <EditText
                        android:id="@+id/mother_birth_place"
                        style="@style/form_textfield_style"
                        android:singleLine="true"
                        android:hint="Mothers place of birth" />


                    <Spinner
                        android:id="@+id/mother_birth_country"
                        style="@style/form_spinner_style">

                    </Spinner>

                    <Spinner
                        android:id="@+id/your_marriage_status"
                        style="@style/form_spinner_style">

                    </Spinner>

                    <EditText
                        android:id="@+id/your_spouse_name"
                        style="@style/form_textfield_style"
                        android:singleLine="true"
                        android:hint="Name of your Spouse" />

                    <Spinner
                        android:id="@+id/his_her_nationality"
                        style="@style/form_spinner_style">

                    </Spinner>

                    <EditText
                        android:id="@+id/his_her_birth_place"
                        style="@style/form_textfield_style"
                        android:singleLine="true"
                        android:hint="His/Her Birth Place" />

                    <Spinner
                        android:id="@+id/his_her_birth_country"
                        style="@style/form_spinner_style">

                    </Spinner>

                    <LinearLayout
                        android:id="@+id/family_save_and_continue"
                        android:layout_width="@dimen/personal_tab_width"
                        android:layout_height="@dimen/save_and_continue"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/destination_text_field_margin_top"
                        android:background="@drawable/save_and_continue_bg"
                        android:clickable="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save and Continue"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/form_credential_text_size" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
