<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="?attr/colorPrimary">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Destination  Country  Detail"
            android:textColor="#ffffff"
            android:textSize="22dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/scroll_margin_top"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center">

                <ImageView
                    android:id="@+id/global_visa"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/select_destination_logo_image_height"
                    android:src="@drawable/logo1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/select_language_margin_top"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/country_banner_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter" />


                <ImageView
                    android:id="@+id/selected_country_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/country_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/country_name_margin_top"
                    android:textAllCaps="true"
                    android:textColor="@color/background_color"
                    android:textSize="@dimen/country_name_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="@dimen/country_name_margin_top"
                    android:textColor="@color/background_color">

                </View>


                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/country_name_margin_top" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/guideline_layout_height"
                    android:layout_marginTop="@dimen/country_name_margin_top"
                    android:background="@drawable/guideline_gradient"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_text_width"
                        android:layout_height="@dimen/icon_text_height"
                        android:src="@drawable/guide" />

                    <TextView
                        android:id="@+id/guideline_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/label_padding_top"
                        android:layout_marginLeft="@dimen/icon_text_margin"
                        android:text="Guideline"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/country_detail_text_size"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/guidline_text_margin_top"
                    android:gravity="center"
                    android:paddingLeft="@dimen/guidline_text_left_padding"
                    android:paddingRight="@dimen/guidline_text_right_padding">


                    <TextView
                        android:id="@+id/guidline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="5sp"
                        android:textColor="@color/background_color"
                        android:textSize="@dimen/requirement_text_size" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/guideline_layout_height"
                    android:layout_marginTop="@dimen/country_name_margin_top"
                    android:background="@drawable/guideline_gradient"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_text_width"
                        android:layout_height="@dimen/icon_text_height"
                        android:src="@drawable/money" />

                    <TextView
                        android:id="@+id/fee_detail_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/icon_text_margin"
                        android:paddingTop="@dimen/label_padding_top"
                        android:text="Fees Details"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/country_detail_text_size"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/country_name_margin_top"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/fees_detail_larger_layout_width"
                            android:layout_height="@dimen/fees_detail_larger_layout_height"
                            android:background="@drawable/layout_bg"
                            android:gravity="center_horizontal|center_vertical">

                            <TextView
                                android:id="@+id/govt_fee_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Govt. Visa Fee"
                                android:textColor="@color/background_color"
                                android:textSize="@dimen/select_destination_text_size" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/fees_detail_smaller_layout_width"
                            android:layout_height="@dimen/fees_detail_larger_layout_height"
                            android:background="@drawable/layout_bg_smaller"
                            android:gravity="center_horizontal|center_vertical">

                            <TextView
                                android:id="@+id/govt_visa_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#36; 60"
                                android:textColor="@color/background_color"
                                android:textSize="@dimen/select_destination_text_size" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/fees_detail_larger_layout_width"
                            android:layout_height="@dimen/fees_detail_larger_layout_height"
                            android:background="@drawable/layout_bg"
                            android:gravity="center_horizontal|center_vertical">

                            <TextView
                                android:id="@+id/service_fee_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Global Visa Service Fees"
                                android:textColor="@color/background_color"
                                android:textSize="@dimen/select_destination_text_size" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/fees_detail_smaller_layout_width"
                            android:layout_height="@dimen/fees_detail_larger_layout_height"
                            android:background="@drawable/layout_bg_smaller"
                            android:gravity="center_horizontal|center_vertical">

                            <TextView
                                android:id="@+id/global_visa_service_fees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#36; 25"
                                android:textColor="@color/background_color"
                                android:textSize="@dimen/select_destination_text_size" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/fees_detail_larger_layout_width"
                            android:layout_height="@dimen/fees_detail_larger_layout_height"
                            android:background="@drawable/last_layout_bg"
                            android:gravity="center_horizontal|center_vertical">

                            <TextView
                                android:id="@+id/total_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textColor="@color/background_color"
                                android:textSize="@dimen/select_destination_text_size" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/fees_detail_smaller_layout_width"
                            android:layout_height="@dimen/fees_detail_larger_layout_height"
                            android:background="@drawable/last_layout_bg"
                            android:gravity="center_horizontal|center_vertical">

                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#36; 85"
                                android:textColor="@color/background_color"
                                android:textSize="@dimen/select_destination_text_size" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/process_layout_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/image_icon_margin_left"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="@dimen/image_icon_width"
                            android:layout_height="@dimen/image_icon_height"
                            android:layout_marginTop="@dimen/country_name_margin_top"
                            android:onClick="applyForVisa"
                            android:src="@drawable/fill" />


                        <TextView
                            android:id="@+id/fill_visa_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fill Evisa Form"
                            android:textColor="@color/background_color"
                            android:textSize="@dimen/image_icon_text_size" />


                    </LinearLayout>


                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_icon_margin_left"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/imageView3"
                            android:layout_width="@dimen/image_icon_width"
                            android:layout_height="@dimen/image_icon_height"
                            android:layout_marginTop="@dimen/country_name_margin_top"
                            android:onClick="applyForVisa"
                            android:src="@drawable/mail" />

                        <TextView
                            android:id="@+id/visa_by_mail_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get Visa By mail"
                            android:textColor="@color/background_color"
                            android:textSize="@dimen/image_icon_text_size" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_icon_margin_left"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/image_icon_width"
                            android:layout_height="@dimen/image_icon_height"
                            android:layout_marginTop="@dimen/country_name_margin_top"
                            android:onClick="applyForVisa"
                            android:src="@drawable/goto1" />

                        <TextView
                            android:id="@+id/go_to_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Go To India"
                            android:textColor="@color/background_color"
                            android:textSize="@dimen/image_icon_text_size" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/apply_now"
                    android:layout_width="@dimen/apply_now_width"
                    android:layout_height="@dimen/apply_now_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/country_name_margin_top"
                    android:background="@drawable/now_apply_selector"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="@dimen/apply_now_image_width"
                        android:layout_height="@dimen/apply_now_image_height"
                        android:src="@drawable/image_change_bg" />

                    <TextView
                        android:id="@+id/apply_now_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/label_padding_top"
                        android:layout_marginLeft="@dimen/apply_now_text_margin_left"
                        android:text="Apply Now"
                        android:textColor="@drawable/icon_color_hover_bg"
                        android:textSize="@dimen/apply_now_text_size" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/guideline_layout_height"
                    android:layout_marginTop="@dimen/country_name_margin_top"
                    android:background="@drawable/guideline_gradient"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_text_width"
                        android:layout_height="@dimen/icon_text_height"
