<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/forms_top_logo"></include>


            <Button
                android:id="@+id/back_to_destination_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/form_margin_top"
                android:textSize="@dimen/destination_country_text_size"
                android:text="Back To  Destination Page"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#333"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="@dimen/form_margin_top"
                android:textSize="@dimen/destination_country_text_size"
                android:gravity="center_horizontal|center_vertical"
                android:text="Payment Detail Page" />




        </LinearLayout>



        </LinearLayout>

    </ScrollView>


</LinearLayout>
