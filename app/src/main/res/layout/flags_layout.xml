<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_placeholder"
            android:layout_width="@dimen/language_image_width"
            android:layout_height="@dimen/language_image_height"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:background="@drawable/images_corner"
            android:elevation="6dp"
            android:src="@drawable/air" />


        <TextView
            android:id="@+id/tv_language_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="chandigarh"
            android:textAllCaps="true"
            android:ellipsize="end"
            android:textColor="#333"
            android:textSize="@dimen/language_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>