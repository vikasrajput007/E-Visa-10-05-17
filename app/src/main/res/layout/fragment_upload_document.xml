<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorElevation"
            android:orientation="vertical">

            <include layout="@layout/forms_top_logo"></include>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/form_layout_background"
                android:orientation="vertical"
                android:paddingLeft="@dimen/layout_padding_left"
                android:paddingRight="@dimen/layout_padding_right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="Fill out the E-Visa application below"
                    android:textColor="#333"
                    android:textSize="@dimen/destination_country_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:background="#333" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passport Front Page :"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:textColor="@color/background_color"
                    android:textSize="@dimen/upload_document_text_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/upload_document_layout_height"
                    android:background="@color/colorWhite"
                    android:padding="@dimen/padding"
                    android:gravity="center|left"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/passport_front_page"
                        android:layout_width="@dimen/upload_document_button_width"
                        android:layout_height="@dimen/upload_document_button_height"
                        android:textAllCaps="false"
                        android:textSize="@dimen/upload_document_text_size"
                        android:text="Browse. . ."/>



                    <!--<TextView-->
                        <!--android:id="@+id/passport_image_name"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="image.jpg"-->
                        <!--android:layout_marginLeft="@dimen/image_name_margin_left"-->
                        <!--android:textColor="@color/background_color"-->
                        <!--android:textSize="@dimen/upload_document_text_size" />-->

                </LinearLayout>

                <ImageView
                    android:id="@+id/passport_image_preview"
                    android:layout_width="@dimen/photo_width"
                    android:layout_marginLeft="@dimen/image_name_margin_left"
                    android:layout_marginTop="@dimen/all_image_margin_top"
                    android:layout_height="@dimen/photo_height" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent passport photo: \n (Size 3.5cms X 4.5cms borderless and MAX file size 5MB)"
                    android:layout_marginTop="@dimen/section_special_margin"
                    android:textColor="@color/background_color"
                    android:textSize="@dimen/upload_document_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/upload_document_layout_height"
                    android:background="@color/colorWhite"
                    android:padding="@dimen/padding"
                    android:gravity="center|left"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/recent_passport_photo"
                        android:layout_width="@dimen/upload_document_button_width"
                        android:layout_height="@dimen/upload_document_button_height"
                        android:textAllCaps="false"
                        android:textSize="@dimen/upload_document_text_size"
                        android:text="Browse. . ."/>


                    <!--<TextView-->
                        <!--android:id="@+id/recent_photo"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="image.jpg"-->
                        <!--android:layout_marginLeft="@dimen/image_name_margin_left"-->
                        <!--android:textColor="@color/background_color"-->
                        <!--android:textSize="@dimen/upload_document_text_size" />-->

                </LinearLayout>

                <ImageView
                    android:id="@+id/recent_image_preview"
                    android:layout_width="@dimen/photo_width"
                    android:layout_marginLeft="@dimen/image_name_margin_left"
                    android:layout_marginTop="@dimen/all_image_margin_top"
                    android:layout_height="@dimen/photo_height" /> />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Proof : \n You have selected driving licence"
                    android:layout_marginTop="@dimen/section_special_margin"
                    android:textColor="@color/background_color"
                    android:textSize="@dimen/upload_document_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/upload_document_layout_height"
                    android:background="@color/colorWhite"
                    android:padding="@dimen/padding"
                    android:gravity="center|left"
                    android:layout_marginTop="@dimen/view_margin_top"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/address_proof"
                        android:layout_width="@dimen/upload_document_button_width"
                        android:layout_height="@dimen/upload_document_button_height"
                        android:textAllCaps="false"
                        android:textSize="@dimen/upload_document_text_size"
                        android:text="Browse. . ."/>


                    <!--<TextView-->
                        <!--android:id="@+id/address_proof_name"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="image.jpg"-->
                        <!--android:layout_marginLeft="@dimen/image_name_margin_left"-->
                        <!--android:textColor="@color/background_color"-->
                        <!--android:textSize="@dimen/upload_document_text_size" />-->

                </LinearLayout>


                <ImageView
                    android:id="@+id/address_proof_preview"
                    android:layout_width="@dimen/photo_width"
                    android:layout_marginLeft="@dimen/image_name_margin_left"
                    android:layout_marginTop="@dimen/all_image_margin_top"
                    android:layout_height="@dimen/photo_height" /> />
                <LinearLayout
                    android:id="@+id/proceed_for_payment"
                    android:layout_width="@dimen/personal_tab_width"
                    android:layout_height="@dimen/save_and_continue"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/section_special_margin"
                    android:layout_marginBottom="@dimen/proceed_for_payment_bottom_margin"
                    android:background="@drawable/save_and_continue_bg"
                    android:clickable="true"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proceed For Payment"

                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/form_credential_text_size" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>